{# templates/index.html.twig #}
<script src="{{ asset('search.js') }}"></script>
<header class="p-3 text-bg-dark">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/" class="nav-link px-2 text-secondary">Naše knedlíčky</a></li>
                <li><a href="#" class="nav-link px-2 text-white">O nás</a></li>
                <li><a href="#" class="nav-link px-2 text-white">Často kladené otázky</a></li>
                <li><a href="/cart" class="nav-link px-2 text-white">Můj košík</a></li>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Vyhledej..." aria-label="Search">
            </form>

            <div class="text-end">
                {% if isLoggedIn %}
                    {% if isAdmin %}
                        <p style=" color: red; text-align: center">{{ user.username }}</p>
                    {% else %}
                        <p style="color: #ffc107;  text-align: center"> {{ user.username }}</p>
                    {% endif %}
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-light me-2">Odhlásit se</a>
                {% else %}
                    <button onclick="window.location.href='{{ path('login_route') }}'" class="btn btn-outline-light me-2">Přihlásit se</button>
                    <button onclick="window.location.href='{{ path('app_register') }}'" class="btn btn-warning">Registrovat se</button>

                {% endif %}
            </div>
        </div>
    </div>
</header>
